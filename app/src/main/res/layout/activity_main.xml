<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:backgroundTint="#000000"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/history_button"
            android:layout_width="32sp"
            android:layout_height="32sp"
            android:layout_marginStart="18sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/baseline_history_24"
            android:backgroundTint="@color/white"
            android:onClick="openHistory"
            app:backgroundTint="@null"
            tools:layout_editor_absoluteX="80sp"
            tools:layout_editor_absoluteY="80sp" />

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="90sp"
            android:layout_marginTop="128sp"
            android:gravity="end"
            android:paddingHorizontal="18sp"
            android:text="@string/placeholderNums"
            android:textColor="@color/white"
            android:textSize="63sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/firstRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/ac_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:paddingTop="30sp"
                    android:text="AC"
                    android:textColor="@color/orange"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/backspace_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:paddingTop="25sp"
                    android:background="@color/black"
                    android:contentDescription="backspace"
                    app:srcCompat="@drawable/baseline_backspace_24"/>

                <Button
                    android:id="@+id/percentage_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="%"
                    android:paddingTop="30sp"
                    android:textColor="@color/orange"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/divide_button"
                    android:layout_width="90sp"
                    android:layout_height="100sp"
                    android:fontFamily="sans-serif-light"
                    android:text="รท"
                    android:gravity="center"
                    android:paddingTop="25sp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/orange"
                    android:textSize="42sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:id="@+id/secondRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/seven_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/eight_button"
                    android:layout_width="100dp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/nine_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/multiply_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="ร"
                    android:textColor="@color/orange"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:id="@+id/thirdRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/four_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/five_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/six_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/subtraction_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/orange"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:id="@+id/fourthRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/one_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/two_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/three_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/addition_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/orange"
                    android:textSize="40sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:id="@+id/fifthRow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/conversion_button"
                    android:layout_width="90sp"
                    android:layout_height="100sp"
                    android:background="@color/black"
                    android:contentDescription="backspace"
                    app:srcCompat="@drawable/baseline_change_circle_24"/>

                <Button
                    android:id="@+id/zero_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/decimal_button"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:fontFamily="@font/aoboshi_one"
                    android:gravity="center"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/equals_button"
                    android:layout_width="90sp"
                    android:layout_height="100sp"
                    android:background="@color/black"
                    android:contentDescription="backspace"
                    app:srcCompat="@drawable/equals_button"/>

            </TableRow>


        </TableLayout>


    </LinearLayout>

</layout>

